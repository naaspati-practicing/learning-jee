<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
html(xmlns="http://www.w3.org/1999/xhtml", 
     xmlns:h="http://xmlns.jcp.org/jsf/html",
     xmlns:p="http://primefaces.org/ui")
  - helloWorld = new Proxy({beanName:'helloWorld'}, {get(target, name){ return "#{"+target.beanName+'.'+name+"}";}});
  h:head: title title goes here
  h:body
    h:form
      p:panel(header='PrimeFaces Hello World Example')
        h:panelGrid(columns=2, cellpadding=4)
          mixin field(name, field)
            h:outputText(value=name)/
            p:inputText(value=helloWorld[field])/
          +field("First Name: ", 'firstName')
          +field("Last Name: ", 'lastName')
          p:commandButton(value="Submit", update='greeting', oncomplete="PF('greetingDialog').show()")/
      p:dialog(header='Greeting', widgetVar='greetingDialog', model='true', resizable='false')
        h:panelGrid#greeting(columns=1, cellpadding=4): h:outputText(value=helloWorld['showGreeting()'])/
    
              
          
    